<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <package name="default" extends="struts-default">
        <!-- Action par défaut -->
        <default-action-ref name="index" />

        <!-- Results globaux -->
        <global-results>
            <result name="error">/jsp/error.jsp</result>
        </global-results>

        <!-- Action "index" -->
        <action name="index" class="gestionSiteAction" method="doList">
            <result>/jsp/index.jsp</result>
        </action>

        <!-- Action Détail Site -->
        <action name="site_detail" class="fr.crosart.escalade.webapp.actions.GestionSiteAction" method="doDetail">
            <result name="success">/jsp/sites/detail.jsp</result>
        </action>

        <action name="user_detail" class="fr.crosart.escalade.webapp.actions.GestionUserAction" method="doDetail">
            <result name="success">/jsp/users/detail.jsp</result>
        </action>

        <!-- Action Créer Site -->
        <action name="site_new" class="fr.crosart.escalade.webapp.actions.GestionSiteAction" method="doCreate">
            <result name="input">/jsp/sites/new.jsp</result>
            <result name="success" type="redirectAction">index</result>
        </action>

        <!-- Action Recherche Avancée -->
        <action name="search" class="fr.crosart.escalade.webapp.actions.GestionSiteAction" method="doSearch">
            <result name="input">/jsp/sites/search_results.jsp</result>
            <result name="success">/jsp/sites/search_results.jsp</result>
        </action>

        <action name="add_comment" class="fr.crosart.escalade.webapp.actions.GestionCommentAction" method="doCreate">
            <result name="input" type="redirectAction">site_detail</result>
            <result name="success" type="redirectAction">
                <param name="actionName">site_detail</param>
                <param name="id">${pId}</param>
            </result>
        </action>

        <action name="delete_comment" class="fr.crosart.escalade.webapp.actions.GestionCommentAction" method="doDelete">
            <result name="success" type="redirectAction">
                <param name="actionName">site_detail</param>
                <param name="id">${sId}</param>
            </result>
        </action>

        <action name="modify_comment" class="fr.crosart.escalade.webapp.actions.GestionCommentAction" method="doModify">
            <result name="input">/jsp/comments/modify.jsp</result>
            <result name="success" type="redirectAction">
                <param name="actionName">site_detail</param>
                <param name="id">${sId}</param>
            </result>
        </action>

        <!-- Actions Login/Logout -->
        <action name="login" class="fr.crosart.escalade.webapp.actions.LoginAction" method="doLogin">
            <result name="input">/jsp/login.jsp</result>
            <result name="success" type="redirectAction">index</result>
        </action>
        <action name="logout" class="fr.crosart.escalade.webapp.actions.LoginAction" method="doLogout">
            <result type="redirectAction">index</result>
        </action>

        <!-- Action Signin -->
        <action name="signin" class="fr.crosart.escalade.webapp.actions.LoginAction" method="doSignin">
            <result name="input">/jsp/users/signin.jsp</result>
            <result name="success" type="redirectAction">index</result>
        </action>

        <!-- Action afficher compte -->
        <action name="account" class="fr.crosart.escalade.webapp.actions.GestionUserAction" method="doDetail">
            <result name="success">/jsp/account.jsp</result>
        </action>

        <action name="claim_topo" class="fr.crosart.escalade.webapp.actions.GestionTopoAction" method="doClaim">
            <result name="success" type="redirectAction">
            <param name="actionName">site_detail</param>
            <param name="id">${ siteId }</param>
            </result>
        </action>

        <action name="reserve_topo" class="fr.crosart.escalade.webapp.actions.GestionTopoAction" method="doReserve">
            <result name="success" type="redirectAction">
                <param name="actionName">site_detail</param>
                <param name="id">${ sId }</param>
            </result>
        </action>

        <action name="accept_topo" class="fr.crosart.escalade.webapp.actions.GestionTopoAction" method="doAccept">
            <result name="success" type="redirectAction">
                <param name="actionName">account</param>
                <param name="id">${ userId }</param>
            </result>
        </action>

        <action name="unlock_topo" class="fr.crosart.escalade.webapp.actions.GestionTopoAction" method="doUnlock">
            <result name="success" type="redirectAction">
                <param name="actionName">account</param>
                <param name="id">${ userId }</param>
            </result>
        </action>

        <action name="official_site" class="fr.crosart.escalade.webapp.actions.GestionSiteAction" method="doSetOfficial">
            <result name="success" type="redirectAction">
                <param name="actionName">site_detail</param>
                <param name="id">${ sId }</param>
            </result>
        </action>

    </package>
</struts>